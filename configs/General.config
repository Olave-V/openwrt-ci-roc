# ---------------------- luci-app-openclash 相关配置 ----------------------
# OpenClash 主程序包
CONFIG_PACKAGE_luci-app-openclash=y
# OpenClash 核心依赖（主二进制）
CONFIG_PACKAGE_clash=y
# OpenClash 额外核心支持（可选，按需启用，此处默认启用常用核心）
CONFIG_PACKAGE_clash-meta=y
CONFIG_PACKAGE_clash-premium=y
# OpenClash 依赖库
CONFIG_PACKAGE_libcap=y
CONFIG_PACKAGE_libcap-bin=y
CONFIG_PACKAGE_libseccomp=y
CONFIG_PACKAGE_libopenssl=y
CONFIG_PACKAGE_libpcre=y
CONFIG_PACKAGE_libpcre2=y
CONFIG_PACKAGE_libzstd=y
# 网络相关依赖（流量转发、TUN设备支持）
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_nftables-json=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_iptables-mod-extra=y
# 文件操作与压缩依赖
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_unrar=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_curl=y
# Lua 环境依赖（LuCI界面运行必需）
CONFIG_PACKAGE_lua=y
CONFIG_PACKAGE_lua-libs=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-lib-httpprotoutils=y
# 时间同步依赖（确保规则更新时间准确）
CONFIG_PACKAGE_ntpd=y
CONFIG_PACKAGE_ntpdate=y
# 可选：DNS加速依赖（提升OpenClash DNS解析性能）
CONFIG_PACKAGE_dnsmasq-full=y
# CONFIG_PACKAGE_dnsmasq is not set  # 禁用轻量版dnsmasq，避免冲突
    
